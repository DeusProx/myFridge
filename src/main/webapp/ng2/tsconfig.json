{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "rootDir": "./src",
    "outDir": "app",
    "baseUrl": ".",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "filesGlob": [
    "src/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
